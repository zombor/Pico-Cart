<h2>Shopping Cart</h2>
<table>
	<thead>
		<tr>
			<td>Quantity</td>
			<td>Name</td>
			<td>Price</td>
			<td>Total Price</td>
		</tr>
	</thead>
	<tbody>
		{{#items}}<tr>
			<td>{{quantity}}</td>
			{{#product}}<td>{{name}}</td>
			<td>{{price}}</td>{{/product}} 
			<td>{{total_price}}</td>
		</tr>{{/items}} 
	</tbody>
	<tfoot>
		<tr>
			<td>{{total_items}}</td>
			<td colspan="2"></td>
			<td>{{total_price}}</td>
		</tr>
	</tfoot>
</table>
<p><a href="cart/empty">Empty Your Cart</a></p>